{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2022",
    "lib": [ "es2015", "dom" ],
    "removeComments": true,
    "outDir": "./lib",
    "sourceMap": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "baseUrl": "./src",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules", ".manual", "release.config.js"]
}
