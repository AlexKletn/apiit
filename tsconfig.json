{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2022",
    "removeComments": true,
    "outDir": "js",
    "sourceMap": true,
    "module": "ESNext",
    "moduleResolution": "node16",
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules"]
}
